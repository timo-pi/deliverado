<h3>Accepted delivery orders:</h3>


<% @my_deliveries.each do |delivery| %>
<div class="card">

  <div class="logo" style="background-image: url('<%= image_url "logo2.png" %>');background-size: cover;">
  </div>

  <div class="card-info">
    <p id="address">
      <%= delivery.request.name %>
      <br>
      <%= delivery.request.delivery_address %>
      <br>
      <%= delivery.request.city %>
    </p>
    <div class="paket">
      <% if delivery.request.size == "S"  %>
      <%= delivery.request.size %>
      <i class="fas fa-box"></i>
      <% elsif delivery.request.size == "M"  %>
      <%= delivery.request.size %>
      <i class="fas fa-box size-m"></i>
      <% elsif delivery.request.size == "L"  %>
      <%= delivery.request.size %>
      <i class="fas fa-box size-l"></i>
      <% end %>
    </div>
  </div>

</div>
<% end %>

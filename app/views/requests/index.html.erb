<h3>Pending requests</h3>

<!-- ~~~~~~~~~ filter ~~~~~~~~~-->
<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6">
   <%= form_tag requests_path, method: :get, class: 'inline-form' do %>
   <%= select_tag(
    :query,
    options_for_select(Request.pluck(:size).uniq),
    class: "form-control", placeholder: "Choose size", prompt: 'Choose size') %>
      <%= submit_tag("Filter", class: "btn") %>
      <% end %>
    </div>
  </div>
<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
<div class="row">
  <% @requests.each do |request| %>
  <%= link_to request_path(request) do %>
  <div class="col-xs-12 col-sm-6 col-md-6">

    <% if request.store.store_name.include? "MediaMarkt" %>
      <div class="card-mediamarkt">
        <div class="logo" style="background-image: url('<%= image_url "mediamarkt-logo.png" %>');background-size: cover;">
        </div>
        <div class="card-info">
          <p id="store-address">
            <%= request.store.store_address %>
          </p>
          <p id="address">
            <%= request.name %>
            <br>
            <%= request.delivery_address %>
            <br>
            <%= request.city %>
          </p>
          <div class="paket">
            <% if request.size == "S"  %>
            <%= request.size %>
            <i class="fas fa-box"></i>
            <% elsif request.size == "M"  %>
            <%= request.size %>
            <i class="fas fa-box size-m"></i>
            <% elsif request.size == "L"  %>
            <%= request.size %>
            <i class="fas fa-box size-l"></i>
            <% end %>
          </div>
        </div>
      </div>


    <% else %>
    <div class="card-saturn">
      <div class="logo" style="background-image: url('<%= image_url "saturn-logo.png" %>');background-size: cover;">
      </div>
      <div class="card-info">
        <p id="store-address">
          <%= request.store.store_address %>
        </p>
        <p id="address">
          <%= request.name %>
          <br>
          <%= request.delivery_address %>
          <br>
          <%= request.city %>
        </p>
        <div class="paket">
          <% if request.size == "S"  %>
          <%= request.size %>
          <i class="fas fa-box"></i>
          <% elsif request.size == "M"  %>
          <%= request.size %>
          <i class="fas fa-box size-m"></i>
          <% elsif request.size == "L"  %>
          <%= request.size %>
          <i class="fas fa-box size-l"></i>
          <% end %>
        </div>
      </div>
    </div>

<% end %>










  </div>
  <% end %>
  <% end %>
</div>






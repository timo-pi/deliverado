<h2>Pending requests</h2>



<% @requests.each do |request| %>
  <div class="card">
    <div class="card-top" style="background-image: url('<%= image_url "logo.jpg" %>');background-size: cover;">

      <div class="card-info">
        <p><%= request.delivery_address %></p>
        <p><%= request.phone_number %></p>
        <p>size: <%= request.size %></p>
      </div>
</div>
  </div>
<% end %>




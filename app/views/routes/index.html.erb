<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-6  col-sm-offset-2 col-md-offset-3">

      <div class="form-banner ">Your current routes:</div>
      <div class="form-card">
       <ol>
      <% @routes.each do |route| %>

        <%= link_to route_path(route) do %>

        <li> <div class="routes-flex"> <%= route.name %><%= link_to "", route_path(route.id), method: 'delete',class: 'far fa-trash-alt route-delete' %> </div></li>

        <% end %>
      <% end %>
      </ol>

      <div class="btn-routes-index">
      <%= button_to "New route", step_1_path, method: 'get', class: "btn btn-primary form-btn"  %>
      <%= button_to "Show Requests", requests_path, method: 'get', class: "btn btn-primary form-btn" %>
      </div>
    </div>
  </div>
</div>

<div class="row">

  <div class="col-xs-10 col-sm-8 col-md-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3">
    <div class="form-card">

      <div class="form-banner ">1. Enter a route name and your home address</div>
      <div class="steps-form">
      <div class="form-group">

        <%= form_for :route, url: { action: "step_2"}, method: :get do |f| %>

        <div class="form-inputs">

            <%= f.label :name, 'Route Name:' %>
            <%= f.text_field :name %>

            <%= f.label :start_address, 'Enter your home address:' %>
            <%= f.text_field :start_address, id: "flat_address" %>

        </div>
        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-primary form-btn" %>
        </div>
        <% end %>
</div>
      </div>
    </div>
  </div>


<div class="row">
  <div class="col-xs-10 col-sm-8 col-md-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3">
    <div class="form-card">
      <div class="form-banner ">2. Enter the address of your place of work:</div>

      <%= form_for :route, url: { action: "step_3"}, method: :get do |f| %>

      <div class="form-group">
        <%= f.label :end_address, 'Work address:', class: "input-label" %>

        <%= f.text_field :end_address, id: "flat_address", class: "input-box" %>

      </div>
      <%= f.hidden_field :name, value: params[:route][:name] %>
      <%= f.hidden_field :start_address, value: params[:route][:start_address] %>

      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-primary form-btn" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<!-- Map -->
<div class="row">
  <div class="col-xs-10 col-sm-8 col-md-6 col-xs-offset-1 col-sm-offset-2 col-md-offset-3">
    <div class="map_steps">
      <%= render 'shared/maps' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

      <div class="form-banner step-flex"><span class="step-number">2</span>
        <div class="flex-steps-text">
          <span class="step-text">Enter the address of your place of work.</span>
        </div>
      </div>

      <div class="form-card">
      <%= form_for :route, url: { action: "step_3"}, method: :get do |f| %>

      <div class="form-group">
        <%= f.label :end_address, 'Work address:', class: "input-label" %>

        <%= f.text_field :end_address, id: "flat_address", class: "input-box" %>

      </div>
      <%= f.hidden_field :name, value: params[:route][:name] %>
      <%= f.hidden_field :start_address, value: params[:route][:start_address] %>

      <div class="form-actions">
        <div class="btn-routes">
        <%= f.button :Next, class: "btn btn-primary form-btn" %>
      </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<!-- Map -->
<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <div class="map_steps">
      <%= render 'shared/maps' %>
    </div>
  </div>
</div>

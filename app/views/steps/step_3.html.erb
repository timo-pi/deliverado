<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

      <div class="form-banner ">3. How far you are willing to deviate from your route for deliveries?</div>
      <div class="form-card">
      <%= form_for :route, url: routes_path, method: :post do |f| %>

      <div class="form-group">
        <%= f.label :delivery_radius, 'Enter the delivery radius:', class: "input-label" %>
        <div class="flex-container">
        <div class="range-pos">
          <input type="text" id="show_radius" value=5>
          <label for="show_radius" id="range-label">km</label>
        </div>
        </div>
        <!-- https://www.w3schools.com/jsref/event_touchend.asp -->
        <%= f.range_field :delivery_radius, :min=>1, :max=>99, :id=>"delivery_radius", :value=>5, :ontouchmove=>"updateTextInput(this.value)", :onmousemove=>"updateTextInput(this.value)"%>

      </div>
        <%= f.hidden_field :name, value: params[:route][:name] %>
        <%= f.hidden_field :start_address, value: params[:route][:start_address] %>
        <%= f.hidden_field :end_address, value: params[:route][:end_address] %>
      <div class="form-actions">
        <div class="btn-routes">
          <%= f.button :next, class: "btn btn-primary form-btn" %>
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>

<!-- Map -->
<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <div class="map_steps">
      <%= render 'shared/maps' %>
    </div>
  </div>
</div>

<!-- update km when slider is moved -->
<script> function updateTextInput(val) {
          document.getElementById('show_radius').value=val;
        }
</script>
